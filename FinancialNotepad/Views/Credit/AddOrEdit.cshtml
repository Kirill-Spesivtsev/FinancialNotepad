@model FinancialNotepad.Models.Credit

@{
    ViewData["PageTitle"] = Model.CreditId == 0 ? "Create a new credit" : "Edit credit";
}

<div class="row form-row">
    <div class="col-md-8">
        <div class="widget p-5" style="background-color: #ffffff">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" name="CreditId" value="@Model.CreditId"/>

                <div class="mb-3">
                    <ejs-textbox placeholder="Description" ejs-for="Description" floatLabelType="Always" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox placeholder="Status" ejs-for="Status" floatLabelType="Always" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox placeholder="Type" ejs-for="Type" floatLabelType="Always" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-numerictextbox ejs-for="TotalSum"
                                        placeholder="TotalSum" floatLabelType="Always"
                                        min=0 step="1" decimals="2" format="n2"></ejs-numerictextbox>
                    <span asp-validation-for="TotalSum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-numerictextbox ejs-for="AnnualPercent"
                                        placeholder="AnnualPercent" floatLabelType="Always"
                                        min=0 step="1" decimals="2" format="n2"></ejs-numerictextbox>
                    <span asp-validation-for="AnnualPercent" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-numerictextbox ejs-for="Period"
                                        placeholder="Period" floatLabelType="Always"
                                        min=0 format="n"></ejs-numerictextbox>
                    <span asp-validation-for="Period" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-numerictextbox ejs-for="LeftToPay"
                                        placeholder="LeftToPay" floatLabelType="Always"
                                        min=0 step="1" decimals="2" format="n2"></ejs-numerictextbox>
                    <span asp-validation-for="LeftToPay" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCurrency" ejs-for="CurrencyId"
                                      dataSource="@ViewBag.Currencies" placeholder="Currency"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                      filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="CurrencyId" text="Name"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="CurrencyId" class="text-danger fs-6"></span>
                </div>

                <div class="">
                    <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
